<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/tv_skip"
        android:text="Пропустить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_skip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:id="@+id/tv_notes"
        android:text="Notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:id="@+id/image"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_notes"
        android:layout_marginHorizontal="36dp"
        android:layout_width="match_parent"
        android:layout_height="264dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="28dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:textSize="28sp"
        android:textStyle="bold"
        android:text="Удобство"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:id="@+id/tv_desc"
        android:layout_marginHorizontal="40dp"
        android:textColor="@color/gray"
        android:text="Создавайте заметки в два клика! Записывайте мысли, идеи и важные задачи мгновенно."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start"
        app:cornerRadius="10dp"
        android:layout_marginHorizontal="86sp"
        android:layout_marginTop="38sp"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        android:textStyle="bold"
        android:textSize="24sp"
        android:backgroundTint="@color/orange"
        android:text="Начать"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>